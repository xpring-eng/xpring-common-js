{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "./",
    "outDir": "build",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
